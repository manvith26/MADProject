<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EMI">

    <Button
        android:id="@+id/btn_calculate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="145dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/years" />

    <EditText
        android:id="@+id/principal"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="49dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Principal Amount"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/interest"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="49dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Interest Rate per Year"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/principal" />

    <EditText
        android:id="@+id/years"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="49dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="How many years"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interest" />

    <EditText
        android:id="@+id/emi"
        android:layout_width="319dp"
        android:layout_height="49dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="42dp"
        android:ems="10"
        android:hint="EMI"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculate2" />

    <EditText
        android:id="@+id/interest_total"
        android:layout_width="317dp"
        android:layout_height="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="43dp"
        android:ems="10"
        android:hint="Total Interst for Loan"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emi" />

</androidx.constraintlayout.widget.ConstraintLayout>

